{
  "name": "usestore-react",
  "version": "1.9.0",
  "description": "A simple state management library for React using hooks",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "test": "jest src",
    "test:watch": "npm run test -- --watch",
    "coverage": "npm run test -- --coverage --watchAll=false",
    "build": "tsc",
    "clean": "rimraf dist && rimraf dist",
    "pretty": "prettier \"src/**/*.{js,jsx,ts,tsx,json,css,md,html}\" --write",
    "deploy": "npm run coverage && npm run build"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/kristapsPelna/usestore-react"
  },
  "bugs": {
    "url": "https://github.com/kristapsPelna/usestore-react/issues",
    "email": "kristaps.pelna@me.com"
  },
  "keywords": [
    "react",
    "state",
    "redux",
    "state",
    "state management",
    "hook",
    "store",
    "hooks",
    "react hooks"
  ],
  "author": "kristaps.pelna.com",
  "license": "MIT",
  "devDependencies": {
    "@babel/core": "^7.19.3",
    "@babel/preset-env": "^7.19.4",
    "@babel/preset-react": "^7.18.6",
    "@babel/preset-stage-0": "^7.8.3",
    "@babel/preset-typescript": "^7.18.6",
    "@commitlint/cli": "^17.1.2",
    "@commitlint/config-conventional": "^17.1.0",
    "@testing-library/react": "^13.4.0",
    "@types/jest": "^29.1.2",
    "@types/react": "^18.0.21",
    "husky": "^4.3.0",
    "jest": "^29.1.2",
    "jest-environment-jsdom": "^29.1.2",
    "lint-staged": "^13.0.3",
    "prettier": "2.7.1",
    "react": "^18.0.0",
    "react-dom": "^18.2.0",
    "react-test-renderer": "^18.2.0",
    "rimraf": "3.0.2",
    "typescript": "^4.8.4"
  },
  "peerDependencies": {
    "react": ">=16x"
  },
  "jest": {
    "coverageThreshold": {
      "global": {
        "branches": 100,
        "functions": 100,
        "lines": 100,
        "statements": 100
      }
    },
    "testEnvironment": "jsdom"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "npm run coverage",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "lint-staged": {
    "src/**/*.{js,jsx,ts,tsx,json,css,md,html}": [
      "prettier --write",
      "git add"
    ]
  }
}