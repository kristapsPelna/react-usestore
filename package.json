{
  "name": "usestore-react",
  "version": "1.8.0",
  "description": "A simple state management library for React using hooks",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "test": "jest src",
    "test:watch": "npm run test -- --watch",
    "coverage": "npm run test -- --coverage --watchAll=false",
    "build": "tsc",
    "clean": "rimraf dist && rimraf dist",
    "pretty": "prettier \"src/**/*.{js,jsx,ts,tsx,json,css,md,html}\" --write",
    "deploy": "npm run coverage && npm run build"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/kristapsPelna/usestore-react"
  },
  "bugs": {
    "url": "https://github.com/kristapsPelna/usestore-react/issues",
    "email": "kristaps.pelna@me.com"
  },
  "keywords": [
    "react",
    "state",
    "redux",
    "state",
    "state management",
    "hook",
    "store",
    "hooks",
    "react hooks"
  ],
  "author": "kristaps.pelna.com",
  "license": "MIT",
  "devDependencies": {
    "@babel/core": "^7.16.7",
    "@babel/preset-env": "^7.16.7",
    "@babel/preset-react": "^7.16.7",
    "@babel/preset-stage-0": "^7.8.3",
    "@babel/preset-typescript": "^7.16.7",
    "@commitlint/cli": "^16.0.1",
    "@commitlint/config-conventional": "^16.0.0",
    "@testing-library/react": "^12.1.2",
    "@testing-library/react-hooks": "^7.0.2",
    "@types/jest": "^27.0.4",
    "@types/react": "^17.0.38",
    "husky": "^4.3.0",
    "jest": "^27.4.7",
    "lint-staged": "^12.1.7",
    "prettier": "2.5.1",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-test-renderer": "^17.0.2",
    "rimraf": "3.0.2",
    "typescript": "^4.5.4"
  },
  "peerDependencies": {
    "react": ">=16.0.0"
  },
  "jest": {
    "coverageThreshold": {
      "global": {
        "branches": 100,
        "functions": 100,
        "lines": 100,
        "statements": 100
      }
    }
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "npm run coverage",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "lint-staged": {
    "src/**/*.{js,jsx,ts,tsx,json,css,md,html}": [
      "prettier --write",
      "git add"
    ]
  }
}